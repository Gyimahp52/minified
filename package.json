{
  "name": "minification-project",
  "version": "1.0.0",
  "scripts": {
    "minify-css": "cleancss -o dist/css/styles.min.css src/css/styles.css",
    "minify-js": "terser src/js/script.js -o dist/js/script.min.js",
    "minify-html": "html-minifier-terser --input-dir src --output-dir dist --collapse-whitespace --remove-comments --minify-css true --minify-js true",
    "build": "npm run minify-css && npm run minify-js && npm run minify-html"
  },
  "devDependencies": {
    "clean-css-cli": "^5.3.0",
    "html-minifier-terser": "^7.0.0",
    "terser": "^5.10.0"
  }
}
